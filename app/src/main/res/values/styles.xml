<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey_700</item>
        <item name="colorPrimaryDark">@color/grey_900</item>
        <item name="colorAccent">@color/grey_700</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>
    <style name="NightYellowTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@android:color/white</item><!--Displayed in app name-->
        <item name="colorPrimaryDark">@android:color/white</item><!--Displayed in highest bar-->
    </style>

    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".view.CameraFragment" android:id="@+id/frameLayout4">
    <TextureView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textureview_camera"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>


    <ImageView
            android:src="@drawable/ic_shutter_white_transparent_48dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/fab_shutter"
            style="@style/AppTheme.RoundMaterialButton"
            android:backgroundTint="@color/grey_700_transparent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/textureview_camera"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="@+id/textureview_camera"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
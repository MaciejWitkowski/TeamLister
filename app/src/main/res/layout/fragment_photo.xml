<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_300"
        tools:context=".view.PickResultFragment" android:id="@+id/frameLayout">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:src="@tools:sample/backgrounds/scenic"
            android:id="@+id/ivPhoto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/btnSeparator"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="8dp"/>
    <Button
            android:text="@string/btnTeam1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTeam1Picker"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnSeparator" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/cyan_200"
            style="@style/AppTheme.RoundedCornerMaterialButton" android:textSize="18sp"/>
    <Button
            android:text="@string/btnSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSeparator" app:layout_constraintStart_toEndOf="@+id/btnTeam1Picker"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnTeam2Picker"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/grey_700"
            style="@style/AppTheme.RoundedCornerMaterialButton" android:textSize="18sp"/>
    <Button
            android:text="@string/btnTeam2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTeam2Picker"
            app:layout_constraintStart_toEndOf="@+id/btnSeparator" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/purple_200"
            style="@style/AppTheme.RoundedCornerMaterialButton" android:textSize="18sp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@android:drawable/ic_menu_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/fabAccept" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@android:drawable/ic_menu_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/fabRetry" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
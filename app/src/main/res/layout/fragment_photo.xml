<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_300"
        tools:context=".view.PhotoFragment" android:id="@+id/frameLayout">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ivPhoto"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    <Button
            android:text="@string/btnTeam1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnTeam1Picker"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnAuto" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/team_1"
            style="@style/AppTheme.RoundedCornerMaterialButton" android:textSize="18sp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/btnSeparator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAuto" app:layout_constraintStart_toEndOf="@+id/btnTeam1Picker"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnTeam2Picker"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/grey_700"
            style="@style/AppTheme.RoundedCornerMaterialButton" android:textSize="18sp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/btnTeam2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnTeam2Picker"
            app:layout_constraintStart_toEndOf="@+id/btnAuto" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="@color/team_2"
            style="@style/AppTheme.RoundedCornerMaterialButton" android:textSize="18sp" android:layout_marginEnd="8dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/ic_check_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/fabAccept" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:focusable="true"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/ic_refresh_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/fabRetry" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:focusable="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>
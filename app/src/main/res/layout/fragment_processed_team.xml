<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/grey_300"
                                                   tools:context=".view.ProcessedTeamFragment" android:id="@+id/frameLayout3">
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_team_processed"
            app:layout_constraintTop_toBottomOf="@+id/btn_team_picker_1" app:layout_constraintStart_toStartOf="parent"
            android:scrollbars="vertical"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn_save"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="@string/btn_team_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:id="@+id/btn_team_picker_1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn_team_picker_2"
            android:backgroundTint="@color/team_1"
            style="@style/AppTheme.RoundedCornerMaterialButton" android:textSize="18sp"
            android:layout_marginStart="8dp" android:layout_marginEnd="4dp"/>
    <Button
            android:text="@string/btn_team_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_team_picker_2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/btn_team_picker_1"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/team_2"
            style="@style/AppTheme.RoundedCornerMaterialButton" android:textSize="18sp"
            android:layout_marginStart="4dp" android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/grey_700"
            style="@style/AppTheme.RoundedCornerMaterialButton" android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>